extend studylayout

block content
	.duyi-content.duyi-study-fullpage
		span.duyi-study-gotop
		section.duyi-study-poster.section
			.duyi-study-poster-title.container
				p 零基础教学
				p 渡一百分百保证毕业学员就业年薪10w+，达不到全额退还学费
				span
			.duyi-study-poster-img-wrapper
				.duyi-study-poster-img

		section.duyi-study-curriculum.section
			.duyi-study-curriculum-web
				.duyi-study-curriculum-web-title.duyi-study-curriculum-title 前端课程
				.duyi-study-curriculum-web-detail-wrapper
					ul.duyi-study-curriculum-web-index
						each lesson, ind in lessons[0]
							li(class={'duyi-study-curriculum-web-index-active': ind === 0})
					each lesson, ind in lessons
						ul.duyi-study-curriculum-web-detail(id=`webslide${ind}`)
							each item, index in lesson
								li
									.duyi-study-curriculum-web-detail-img(style="background-color: #bbb;")
									p #{item.intro}
									p
										span.duyi-study-curriculum-author #{item.author}				

			.duyi-study-curriculum-java
				.duyi-study-curriculum-java-title.duyi-study-curriculum-title JAVA课程
				.duyi-study-curriculum-java-detail-wrapper
					each lesson, ind in lessons
						ul.duyi-study-curriculum-java-detail(id=`javaslide${ind}`)
							each item, index in lesson
								li
									.duyi-study-curriculum-java-detail-img(style="background-color: #bbb;")
									p #{item.intro}
									p
										span.duyi-study-curriculum-author #{item.author}				

		section.duyi-study-exercises.section
			.duyi-study-exercises-title
				p 水平测试套题
				div
					img(src="http://p6alxlphh.bkt.clouddn.com/hand.png")
				p Drag for more
			.duyi-study-exercises-content
				.duyi-study-exercises-scroll-wrapper
					each item in exercises
						.duyi-study-exercises-scroll-item
							.duyi-study-exercises-scroll-img
								img(src=`${item.img}`)
							.duyi-study-exercises-scroll-info
								p #{item.title}
								div.duyi-study-exercises-describe
									span #{item.describe}
								div.duyi-study-exercises-star
									each star in item.star
										if star == 0
											span(style=`background:url(http://p6alxlphh.bkt.clouddn.com/dark-star.png) no-repeat`)
										else if star == 1
											span(style=`background:url(http://p6alxlphh.bkt.clouddn.com/half-star.png) no-repeat`)
										else
											span(style=`background:url(http://p6alxlphh.bkt.clouddn.com/star.png) no-repeat`)
		section.duyi-study-consult.section
			.duyi-study-consult-title
				p 咨询课程
				span
			.duyi-study-consult-way-row
				.duyi-study-consult-way-item.duyi-study-consult-way-wechat
					.duyi-study-consult-way-item-wrapper
						.duyi-study-consult-way-wechat-photo
						.duyi-study-consult-way-wechat-qrcode
					p WeChat
				.duyi-study-consult-way-item.duyi-study-consult-way-phone
					.duyi-study-consult-way-item-wrapper
						.duyi-study-consult-way-phone-photo
						.duyi-study-consult-way-phone-number
							p +86 123 4563 7896
							p +86 173 4523 7556
					p Phone
				.duyi-study-consult-way-item.duyi-study-consult-way-online
					.duyi-study-consult-way-item-wrapper
						.duyi-study-consult-way-online-photo
						a(href="#").duyi-study-consult-way-online-a
					p Online
			include includes/study-footer